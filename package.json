{
  "name": "curatr-app",
  "version": "0.5.4",
  "description": "Track media file quality, playback compatibility, and maintenance status for Plex libraries",
  "author": "Lou-i3",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:Lou-i3/curatr-app.git"
  },
  "homepage": "https://github.com/Lou-i3/curatr-app",
  "bugs": {
    "url": "https://github.com/Lou-i3/curatr-app/issues"
  },
  "keywords": [
    "plex",
    "media",
    "quality",
    "tracker",
    "nextjs",
    "prisma"
  ],
  "private": true,
  "scripts": {
    "dev": "npm run build:worker && next dev",
    "build": "npm run build:worker && next build",
    "build:worker": "esbuild src/lib/tasks/task-worker.ts --bundle --platform=node --target=node22 --outfile=src/lib/tasks/task-worker.js --external:@prisma/client --external:@prisma/adapter-better-sqlite3",
    "start": "next start"
  },
  "dependencies": {
    "@prisma/adapter-better-sqlite3": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fs": "^0.0.1-security",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "esbuild": "^0.25.0",
    "prisma": "^7.3.0",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
